	</listeners>
	<test name="CityInMap">
		<classes>
			<class
				name="com.testvagrant.automation.codingassignment.WebTests">
				<methods>
					<include name="searchWeatherOfACityInWebsite" />
				</methods>
			</class>
		</classes>
	</test> <!-- Test -->
	<test name="CityDetailsinWebPage">
		<classes>
			<class
				name="com.testvagrant.automation.codingassignment.WebTests">
				<methods>
					<include name="validateCityWeatherDetailsIsPresentInMap" />
				</methods>
			</class>
		</classes>
	</test> <!-- Test -->
	<test name="SearchWeatherOfACityAPI">
